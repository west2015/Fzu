<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>
    
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>
    </style>

    <!-- Custom Theme -->
    <style name="LightTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="ActionBarTextColor">@color/white_text</item>
        <item name="ActionBarBackground">@color/blue_500</item>
        <item name="ContentTextColor">@color/black_text</item>
        <item name="ContentBackground">@color/white</item>
        <item name="HintTextColor">@color/black_hint</item>
        <item name="SpecialColor">@color/blue_500</item>
        <item name="RippleColor">@color/black_disabled</item>
        <item name="FabShadowColor">@color/grey_500</item>
        <item name="CourseTextColor">@color/white_text</item>
        <item name="SecondaryTextColor">@color/black_secondary</item>
        <item name="FzuIcon">@drawable/ic_f_light</item>
    </style>
    
    <style name="DarkTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="ActionBarTextColor">@color/white_text</item>
        <item name="ActionBarBackground">@color/black_ab</item>
        <item name="ContentTextColor">@color/white_text</item>
        <item name="ContentBackground">@color/black_bg</item>
        <item name="HintTextColor">@color/white_hint</item>
        <item name="SpecialColor">@color/teal_500</item>
        <item name="RippleColor">@color/white</item>
        <item name="FabShadowColor">@color/black</item>
        <item name="CourseTextColor">@color/white_secondary</item>
        <item name="SecondaryTextColor">@color/white_secondary</item>
        <item name="FzuIcon">@drawable/ic_f_dark</item>
	</style>
    
</resources>
