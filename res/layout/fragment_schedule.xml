<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.west2.main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/ContentBackground">
    <View 
        android:id="@+id/view_center"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"/>
    <!-- TITLE -->
    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/ActionBarBackground"
        android:orientation="horizontal"
        android:gravity="center_vertical">
		<com.material.widget.RaisedButton 
		    android:id="@+id/btn_week"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_marginTop="4dp"
		    android:layout_marginBottom="4dp"
		    android:layout_marginLeft="72dp"
		    android:layout_marginStart="72dp"
		    android:paddingLeft="8dp"
		    android:paddingStart="8dp"
		    android:background="@color/transparent"
		    android:text="第1周"
		    android:textSize="24sp"
		    android:textColor="@color/white_text"/>
		<ImageView 
		    android:src="@drawable/ic_arrow_drop_down_white_24dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@+id/btn_week"
		    android:layout_centerVertical="true"/>
		<com.material.widget.ActionView 
		    android:id="@+id/av_menu"
		    android:layout_width="56dp"
		    android:layout_height="56dp"
		    android:padding="16dp"
		    android:layout_alignParentEnd="true"
		    android:layout_alignParentRight="true"
		    custom:av_action="menu"
		    custom:av_color="@color/white_text"/>
	</RelativeLayout>
	<!-- DATE and TIME -->
	<TextView 
	    android:visibility="gone"
	    android:id="@+id/tv_month"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="8dp"
	    android:layout_marginLeft="16dp"
	    android:layout_below="@+id/ll_title"
	    android:gravity="center_vertical"
	    android:text="二月"
	    android:textSize="14sp"
	    android:textColor="@color/black_secondary"/>
	<LinearLayout 
		android:id="@+id/ll_day"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_below="@+id/tv_month"
		android:orientation="horizontal">
		<TextView 
		    android:id="@+id/tv_sunday"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="3"
			android:gravity="center"
			android:text="周日"
			android:textSize="14sp"
			android:textColor="?attr/HintTextColor"/>
		<TextView 
			android:id="@+id/tv_monday"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="3"
			android:gravity="center"
			android:text="周一"
			android:textSize="14sp"
			android:textColor="?attr/HintTextColor"/>
		<TextView 
		    android:id="@+id/tv_tuesday"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="3"
			android:gravity="center"
			android:text="周二"
			android:textSize="14sp"
			android:textColor="?attr/HintTextColor"/>
		<TextView
		    android:id="@+id/tv_wednesday"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="3"
			android:gravity="center"
			android:text="周三"
			android:textSize="14sp"
			android:textColor="?attr/HintTextColor"/>
		<TextView 
		    android:id="@+id/tv_thursday"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="3"
			android:gravity="center"
			android:text="周四"
			android:textSize="14sp"
			android:textColor="?attr/HintTextColor"/>
		<TextView 
		    android:id="@+id/tv_friday"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="3"
			android:gravity="center"
			android:text="周五"
			android:textSize="14sp"
			android:textColor="?attr/HintTextColor"/>
		<TextView 
		    android:id="@+id/tv_saturday"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="3"
			android:gravity="center"
			android:text="周六"
			android:textSize="14sp"
			android:textColor="?attr/HintTextColor"/>
	</LinearLayout>
	<View 
		android:id="@+id/view_divider"
		android:layout_width="match_parent"
		android:layout_height="0.1dp"
		android:background="@color/black_dividers"
		android:layout_below="@+id/ll_day"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"
		android:layout_marginTop="4dp"/>
	
	<!-- SCHEDULE -->
	<com.material.widget.DampScrollView 
	    android:id="@+id/schedule_dsv"
	    android:overScrollMode="never"
	    android:scrollbars="none"
	    android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/view_divider">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingTop="4dp"
		android:layout_marginBottom="48dp">
		<TextView
		    android:id="@+id/tv_schedule_1_4"
		    android:layout_width="wrap_content"
		    android:layout_height="24dp"
		    android:gravity="center_vertical"
		    android:layout_marginLeft="16dp"
		    android:layout_marginStart="16dp"
		    android:text="1 - 4"
		    android:textSize="14sp"
		    android:textColor="@color/black_secondary"/>
		<RelativeLayout
		    android:id="@+id/rl_schedule_1_4"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		</RelativeLayout>
		<TextView
		    android:id="@+id/tv_schedule_5_8"
		    android:layout_width="wrap_content"
		    android:layout_height="24dp"
		    android:layout_marginLeft="16dp"
		    android:layout_marginStart="16dp"
		    android:gravity="center_vertical"
		    android:text="5 - 8"
		    android:textSize="14sp"
		    android:textColor="@color/black_secondary"/>
		<RelativeLayout
		    android:id="@+id/rl_schedule_5_8"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		</RelativeLayout>
		<TextView
		    android:id="@+id/tv_schedule_9"
		    android:layout_width="wrap_content"
		    android:layout_height="24dp"
		    android:layout_marginLeft="16dp"
		    android:layout_marginStart="16dp"
		    android:gravity="center_vertical"
		    android:text="9 - 12"
		    android:textSize="14sp"
		    android:textColor="@color/black_secondary"/>
		<RelativeLayout
		    android:id="@+id/rl_schedule_9"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		</RelativeLayout>
	</LinearLayout>
	</com.material.widget.DampScrollView>

	<com.material.widget.FloatingActionButton 
	    android:id="@+id/fab_schedule"
	    android:layout_width="48dp"
	    android:layout_height="48dp"
	    android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
	    android:layout_alignParentBottom="true"
	    android:layout_marginEnd="16dp"
	    android:layout_marginRight="16dp"
	    android:layout_marginBottom="16dp"
	    custom:button_color="@color/blue_400"
	    custom:button_colorPressed="@color/blue_700"/>	
		
	<!-- REFRESH PAGE -->
	<RelativeLayout
	    android:visibility="gone"
	    android:id="@+id/rl_refresh"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/ll_title"
	    android:background="@color/white">
		<com.material.widget.CircularProgressView 
		    android:layout_width="48dp"
		    android:layout_height="48dp"
		    android:layout_centerInParent="true"
		    
		    custom:cpv_indeterminate="true"
		    custom:cpv_color="@color/blue_500"/>
	</RelativeLayout>
		
	<!-- SHADOW -->
	<include 
	    layout="@layout/shadow_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/ll_title"/>
	
	<Button
	    android:visibility="gone"
	    android:id="@+id/btn_hide_week_picker"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/ll_title"
	    android:background="@color/transparent"/>

	<!-- WEEK PICKER -->
	<ListView
	    android:visibility="gone"
	    android:id="@+id/lv_week"
	    android:layout_width="150dp"
	    android:layout_height="280dp"
	    android:layout_marginLeft="56dp"
	    android:layout_marginRight="56dp"
	    android:divider="@color/black_dividers"
	    android:dividerHeight="0.1dp"
	    android:background="@drawable/btn_bg"
	    android:scrollbars="none"
	    android:overScrollMode="never"/>
	
	<!-- MENU -->
	<LinearLayout
	    android:visibility="gone"
	    android:id="@+id/ll_menu"
	    android:layout_width="125dp"
	    android:layout_height="108dp"
	    android:layout_marginTop="52.5dp"
	    android:layout_marginEnd="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_alignParentEnd="true"
	    android:layout_alignParentRight="true"
	    android:orientation="vertical"
	    android:background="@drawable/btn_bg">
	    <Button
	        android:visibility="gone"
	        android:id="@+id/btn_add"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:background="@color/transparent"
	        android:text="添加 "
	        android:textSize="14sp"
	        android:textColor="@color/black_text"/>
	    <View 
	        android:visibility="gone"
	        android:layout_width="match_parent"
	        android:layout_height="0.1dp"
	        android:background="@color/black_dividers"/>
	    <Button 
	        android:visibility="gone"
	        android:id="@+id/btn_del"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:background="@color/transparent"
	        android:text="删除"
	        android:textSize="14sp"
	        android:textColor="@color/black_text"/>
	    <Button 
	        android:id="@+id/btn_refresh"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:background="@color/transparent"
	        android:text="刷新"
	        android:textSize="14sp"
	        android:textColor="@color/black_text"/>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="0.1dp"
	        android:background="@color/black_dividers"/>
	    <Button 
	        android:id="@+id/btn_setting"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:background="@color/transparent"
	        android:text="设置"
	        android:textSize="14sp"
	        android:textColor="@color/black_text"/>
	</LinearLayout>
	
	<com.material.widget.RevealColorView 
	    android:id="@+id/rcv_schedule"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"/>
	<!-- TAB -->
	<RelativeLayout
	    android:visibility="gone"
	    android:id="@+id/rl_tab"
	    android:layout_width="match_parent"
	    android:layout_height="104dp"
	    android:background="@color/blue_500">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="56dp"
	        android:layout_marginLeft="72dp"
	        android:layout_marginStart="72dp"
	        android:gravity="center_vertical"
	        android:text="单日视图"
	        android:textSize="24sp"
	        android:textColor="@color/white_text"/>
	    <com.material.widget.PagerSlidingTabStrip
	        android:id="@+id/tab_schedule"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:layout_alignParentBottom="true"
	        custom:pstsIndicatorColor="@color/white"
	        custom:pstsTextColorSelected="@color/white_text"
	        custom:pstsTextColorNoSelected="@color/white_secondary"/>
	</RelativeLayout>
	
	<android.support.v4.view.ViewPager
	    android:visibility="gone"
	    android:id="@+id/viewpager_schedule"
	    android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/rl_tab"
		android:background="@color/white"/>

	<com.material.widget.ActionView
        android:id="@+id/av"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="16dp"
        custom:av_color="@color/white"
        custom:av_action="drawer"/>
	
	<com.material.widget.FloatingActionButton
	    android:visibility="gone"
	    android:id="@+id/fab_day"
	    android:layout_width="48dp"
	    android:layout_height="48dp"
	    android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
	    android:layout_alignParentBottom="true"
	    android:layout_marginEnd="16dp"
	    android:layout_marginRight="16dp"
	    android:layout_marginBottom="16dp"
	    custom:image="@drawable/schedule_day_back"
	    custom:image_size="32dp"
	    custom:button_color="@color/blue_500"
	    custom:button_colorPressed="@color/blue_700"/>
	
</RelativeLayout>