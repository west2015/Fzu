<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <!-- SUB TITLE -->
	<TextView
	    android:id="@+id/tv_subtitle"
	    android:layout_width="wrap_content"
	    android:layout_height="48dp"
	    android:layout_marginLeft="16dp"
	    android:layout_marginStart="16dp"
	    android:gravity="center_vertical"
	    android:text="2014学年02学期"
	    android:textSize="16sp"
	    android:textColor="@color/black_secondary"/>
	<!-- CONTENT -->
	<TextView 
	    android:id="@+id/tv_name"
	    android:layout_width="match_parent"
	    android:layout_height="48dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginStart="20dp"
	    android:layout_below="@+id/tv_subtitle"
		android:layout_toLeftOf="@+id/tv_score"
		android:layout_toStartOf="@+id/tv_score"
	    android:gravity="center_vertical"
	    android:singleLine="true"
	    android:ellipsize="end"
	    android:text="英语文化英语文化英语文化英语文化英语文化英语文化"
	    android:textSize="16sp"
	    android:textColor="@color/black_text"/>
	<TextView
	    android:id="@+id/tv_score"
	    android:layout_width="wrap_content"
	    android:layout_height="48dp"
	    android:layout_below="@+id/tv_subtitle"
	    android:layout_alignParentRight="true"
	    android:paddingLeft="16dp"
	    android:paddingRight="16dp"
	    android:gravity="center_vertical"
	    android:text="78"
	    android:textSize="16sp"
	    android:textColor="@color/black_secondary"/>
	<TextView 
	    android:visibility="gone"
	    android:id="@+id/tv_text_credit"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/tv_name"
	    android:layout_marginLeft="16dp"
	    android:layout_marginStart="16dp"
	    android:text="学分"
	    android:textSize="12sp"
	    android:textColor="@color/black_secondary"/>
	<TextView 
	    android:visibility="gone"
	    android:id="@+id/tv_credit"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/tv_name"
	    android:layout_toRightOf="@+id/tv_text_credit"
	    android:layout_marginLeft="4dp"
	    android:layout_marginStart="4dp"
	    android:text="2.0"
	    android:textSize="12sp"
	    android:textColor="@color/black_secondary"/>
	
	<TextView 
	    android:visibility="gone"
	    android:id="@+id/tv_text_gradepoint"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/tv_name"
	    android:layout_toEndOf="@+id/tv_credit"
	    android:layout_toRightOf="@+id/tv_credit"
	    android:layout_marginLeft="16dp"
	    android:layout_marginStart="16dp"
	    android:text="绩点"
	    android:textSize="12sp"
	    android:textColor="@color/black_secondary"/>
	<TextView 
	   	android:visibility="gone"
	    android:id="@+id/tv_gradepoint"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/tv_name"
	    android:layout_toEndOf="@+id/tv_text_gradepoint"
	    android:layout_toRightOf="@+id/tv_text_gradepoint"
	    android:layout_marginLeft="4dp"
	    android:layout_marginStart="4dp"
	    android:text="3.9"
	    android:textSize="12sp"
	    android:textColor="@color/black_secondary"/>
		
</RelativeLayout>