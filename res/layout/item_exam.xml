<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/fzu.mcginn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">
    <com.material.widget.FloatingActionButton
        android:visibility="gone"
        android:id="@+id/fab"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="8dp"
        android:layout_centerVertical="true"
       	custom:type="mini"
       	custom:shadow_color="@color/transparent"
        custom:button_color="@color/green_a700"
        custom:button_colorPressed="@color/green_a700"/>
    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/transparent"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/view"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:text="大学英语四"
        android:textSize="18sp"
        android:textColor="@color/black_text"/>
    <TextView
        android:id="@+id/tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/view"
        android:layout_below="@+id/tv_name"
        android:padding="2dp"
        android:text="东3-405"
        android:textSize="14sp"
        android:textColor="@color/black_secondary"/>
    <TextView 
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/view"
        android:layout_below="@+id/tv_place"
        android:padding="2dp"
        android:text="2015年03月29日 8:30-10:30"
        android:textSize="14sp"
        android:textColor="@color/black_secondary"/>
</RelativeLayout>