<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.west2.main"
	android:id="@+id/rl_hide"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/grey_100"
	android:focusable="true"
	android:focusableInTouchMode="true">
	<View 
	    android:id="@+id/view_middle"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/transparent"
	    android:layout_centerVertical="true"/>
	<com.material.widget.InputText 
	    android:id="@+id/et_username"
	    android:layout_width="match_parent"
	    android:layout_height="90dp"
	    android:layout_marginLeft="16dp"
	    android:layout_marginRight="16dp"
	    android:layout_above="@+id/view_middle"
	    android:hint="教务处账号"
	    android:singleLine="true"
	    android:maxLength="13"
	    custom:floatingLabel="true"
	    custom:textColor="@color/blue_500"
	    custom:labelTextSize="14sp"/>
	<com.material.widget.InputText 
	    android:id="@+id/et_password"
	    android:layout_width="match_parent"
	    android:layout_height="90dp"
	    android:layout_marginLeft="16dp"
	    android:layout_marginRight="16dp"
	    android:layout_below="@+id/view_middle"
	    android:inputType="textPassword"
	    android:hint="教务处密码"
	    android:singleLine="true"
	    custom:floatingLabel="true"
	    custom:textColor="@color/blue_500"
	    custom:labelTextSize="14sp"/>
	<TextView
	    android:id="@+id/tv_fzu"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_above="@+id/et_username"
	    android:layout_marginBottom="16dp"
	    android:text="FZUHELPER"
	    android:textSize="12sp"
	    android:textColor="@color/black_secondary"/>
	<TextView
	    android:id="@+id/tv_fzu2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_above="@+id/tv_fzu"
	    android:text="福大助手"
	    android:textSize="30sp"
	    android:textColor="@color/black_text"/>
	<ImageView 
	    android:src="@drawable/ic_f"
	    android:layout_width="60dp"
	    android:layout_height="60dp"
	    android:layout_above="@+id/tv_fzu2"
	    android:layout_centerHorizontal="true"/>

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="56dp"
	    android:layout_below="@+id/et_password"
	    android:layout_marginLeft="16dp"
	    android:layout_marginRight="16dp"
	    android:layout_marginTop="32dp"
	    android:background="@drawable/btn_bg" >

	    <com.material.widget.RaisedButton
	        android:id="@+id/btn_login"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@color/transparent"
	        android:focusable="true"
	        android:text="登录"
	        android:textColor="@color/blue_500"
	        android:textSize="18sp" />

	    <ProgressBar
	        android:id="@+id/pb"
	        style="@android:style/Widget.ProgressBar.Horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="2dp"
	        android:layout_alignParentBottom="true"
	        android:indeterminate="true"
	        android:visibility="gone"/>
	</RelativeLayout>

</RelativeLayout>