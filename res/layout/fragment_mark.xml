<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/fzu.mcginn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/rl_hide">
	<!-- TITLE -->
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="128dp"
	    android:background="@color/teal_a700">
	   	<com.material.widget.ActionView
	   	    android:id="@+id/av_drawer"
	   	    android:layout_width="56dp"
	   	    android:layout_height="56dp"
	   	    android:padding="16dp"
	   	    custom:av_color="@color/white"
	   	    custom:av_action="drawer"/>
	   	<TextView 
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="56dp"
	   	    android:layout_marginTop="28dp"
	   	    android:layout_marginLeft="80dp"
	   	    android:gravity="center_vertical"
			android:text="成绩"
			android:textSize="24sp"
			android:textColor="@color/white_text"/>
	   	<ImageView 
	   	    android:layout_width="56dp"
	   	    android:layout_height="56dp"
	   	    android:layout_alignParentRight="true"
	   	    android:padding="16dp"
	   	    android:src="@drawable/ic_credit_card_white_48dp"
	   	    android:scaleType="fitCenter"/>
	   	<com.material.widget.RaisedButton
	   	    android:id="@+id/btn_credit"
	   	    android:layout_width="56dp"
	   	    android:layout_height="56dp"
	   	    android:layout_alignParentRight="true"
	   	    android:background="@color/transparent"
	   	    android:paddingTop="8dp"
	   	    android:paddingBottom="8dp"/>
	   	<ImageView 
	   	    android:layout_width="56dp"
	   	    android:layout_height="56dp"
	   	    android:layout_toLeftOf="@+id/btn_credit"
	   	    android:padding="16dp"
	   	    android:src="@drawable/ic_content_copy_white_48dp"
	   	    android:scaleType="fitCenter"/>
	   	<com.material.widget.RaisedButton
	   	    android:id="@+id/btn_copy"
	   	    android:layout_width="56dp"
	   	    android:layout_height="56dp"
	   	    android:layout_toLeftOf="@+id/btn_credit"
	   	    android:background="@color/transparent"
	   	    android:paddingTop="8dp"
	   	    android:paddingBottom="8dp"/>
	</RelativeLayout>
	<!-- CONTENT -->
    <RelativeLayout
       	android:id="@+id/rl_mark_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        android:background="@color/white">
    	<!-- MARK REPORT -->
        <com.material.widget.PagerSlidingTabStrip
	        android:id="@+id/tab_mark_report"
	        android:layout_width="match_parent"
	        android:layout_height="56dp"
	        android:background="@color/teal_a700"/>
	    <android.support.v4.view.ViewPager
		    android:id="@+id/viewpager_mark_report"
		    android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@+id/tab_mark_report"
			android:layout_above="@+id/rl_share"
			android:overScrollMode="never"
			android:background="@color/white"/>
	    <!-- PULL TO REFRESH -->
	    <android.support.v4.widget.SwipeRefreshLayout
			android:id="@+id/srl"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="56dp">
			<ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:divider="@color/black_dividers"
        		android:dividerHeight="0dp">
			</ListView>
        </android.support.v4.widget.SwipeRefreshLayout>
	    <!-- Shadow -->
    	<include
		    layout="@layout/shadow_layout"
		    android:layout_width="match_parent"
			android:layout_height="wrap_content"
		    android:layout_below="@+id/tab_mark_report"/>
    </RelativeLayout>
</RelativeLayout>