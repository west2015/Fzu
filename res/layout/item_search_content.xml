<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp" >
    
    <TextView 
        android:id="@+id/text_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="作者"
        android:textSize="14sp"
        android:textColor="@color/black_secondary"/>
    
    <TextView 
        android:id="@+id/tv_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text_author"
        android:paddingRight="16dp"
        android:text="菲利普斯,哈迪王明发"
        android:textSize="14sp"
        android:textColor="@color/black_text"
        android:maxLines="1"
        android:ellipsize="end"/>
    
    <TextView 
        android:id="@+id/text_publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_author"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="出版社"
        android:textSize="14sp"
        android:textColor="@color/black_secondary"/>
    
    <TextView 
        android:id="@+id/tv_publisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_author"
        android:layout_toRightOf="@+id/text_publisher"
        android:paddingRight="16dp"
        android:text="人民邮电出版社 "
        android:textSize="14sp"
        android:textColor="@color/black_text"
        android:maxLines="1"
        android:ellipsize="end"/>
    
    <TextView 
        android:id="@+id/text_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_publisher"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="索书号"
        android:textSize="14sp"
        android:textColor="@color/black_secondary"/>
    
    <TextView 
        android:id="@+id/tv_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_publisher"
        android:layout_toRightOf="@+id/text_place"
        android:paddingRight="16dp"
        android:text="TP316/135"
        android:textSize="14sp"
        android:textColor="@color/black_text"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView 
        android:id="@+id/text_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_place"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:text="馆藏数"
        android:textSize="14sp"
        android:textColor="@color/black_secondary"/>
    
    <TextView 
        android:id="@+id/tv_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_place"
        android:layout_toRightOf="@+id/text_store"
        android:text="3"
        android:textSize="14sp"
        android:textColor="@color/black_text"
        android:maxLines="1"
        android:ellipsize="end"/>
    
    <TextView 
        android:id="@+id/text_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_place"
        android:layout_toRightOf="@+id/tv_store"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:text="可借数"
        android:textSize="14sp"
        android:textColor="@color/black_secondary"
        android:maxLines="1"
        android:ellipsize="end"/>
    
    <TextView 
        android:id="@+id/tv_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_place"
        android:layout_toRightOf="@+id/text_number"
        android:text="3"
        android:textSize="14sp"
        android:textColor="@color/black_text"
        android:maxLines="1"
        android:ellipsize="end"/>
    
    
</RelativeLayout>