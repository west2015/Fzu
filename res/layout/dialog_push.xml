<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/fzu.mcginn"
    android:id="@+id/rl_hide"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:background="@drawable/dialog_bg"
    android:paddingBottom="20dp"
    android:focusable="true"
    android:focusableInTouchMode="true"> 
    
	<TextView 
	    android:id="@+id/tv_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="24dp"
	    android:text="推送"
	    android:textSize="24sp"
	    android:textColor="@color/black_text"
	    android:textStyle="bold"/>
	<!-- Mark Push -->	
	<TextView 
	    android:id="@+id/tv_mark_push"
	    android:layout_width="wrap_content"
	    android:layout_height="32dp"
	    android:layout_below="@+id/tv_title"
	    android:layout_marginLeft="36dp"
	    android:layout_marginBottom="16dp"
	    android:gravity="center_vertical"
	    android:text="成绩"
	    android:textSize="18sp"
	    android:textColor="@color/black_text"/>
	<com.zcw.togglebutton.ToggleButton
	    android:layout_width="64dp"
	    android:layout_height="32dp"
	    android:layout_below="@+id/tv_title"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="20dp"/>
	<!-- Lecture Push -->	
	<TextView 
	    android:id="@+id/tv_lecture_push"
	    android:layout_width="wrap_content"
	    android:layout_height="32dp"
	    android:layout_below="@+id/tv_mark_push"
	    android:layout_marginLeft="36dp"
	    android:layout_marginBottom="16dp"
	    android:gravity="center_vertical"
	    android:text="嘉熙"
	    android:textSize="18sp"
	    android:textColor="@color/black_text"/>
	<com.zcw.togglebutton.ToggleButton
	    android:layout_width="64dp"
	    android:layout_height="32dp"
	    android:layout_below="@+id/tv_mark_push"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="20dp"/>
	<!-- Other -->
	<TextView 
	    android:id="@+id/tv_other_push"
	    android:layout_width="wrap_content"
	    android:layout_height="32dp"
	    android:layout_below="@+id/tv_lecture_push"
	    android:layout_marginLeft="36dp"
	    android:layout_marginBottom="24dp"
	    android:gravity="center_vertical"
	    android:text="其他"
	    android:textSize="18sp"
	    android:textColor="@color/black_text"/>
	<com.zcw.togglebutton.ToggleButton
	    android:layout_width="64dp"
	    android:layout_height="32dp"
	    android:layout_below="@+id/tv_lecture_push"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="20dp"/>

	<!-- Button -->	
	<Button
	    android:id="@+id/btn_save"
	    android:layout_width="wrap_content"
	    android:layout_height="36dp"
	    android:layout_marginTop="12dp"	    
	    android:layout_marginLeft="4dp"
	    android:layout_marginRight="16dp"
	    android:minWidth="64dp"
	    android:layout_below="@+id/tv_other_push"
	    android:layout_alignParentRight="true"
	    android:background="@color/transparent"
	    android:paddingLeft="8dp"
	    android:paddingRight="8dp"
	    android:text="保存"
	    android:textSize="18sp"
	    android:textColor="@color/blue_500"/>
	
	<Button 
	    android:id="@+id/btn_cancel"
	    android:layout_width="wrap_content"
	    android:layout_height="36dp"
	    android:layout_marginTop="12dp"
	    android:layout_marginLeft="4dp"
	    android:layout_marginRight="4dp"
	    android:minWidth="64dp"
	    android:layout_below="@+id/tv_other_push"
	    android:layout_toLeftOf="@+id/btn_save"
	    android:background="@color/transparent"
	    android:paddingLeft="8dp"
	    android:paddingRight="8dp"
	    android:text="取消"
	    android:textSize="18sp"
	    android:textColor="@color/blue_500"/>
</RelativeLayout>